<%= render 'layouts/header' %>

<div class='post_wrapper_plan'>
  <div class='post_title'>
    <h1>詳細変更</h1>
  </div>
  <div class='post_container'>
    <%= form_with model: @detail, url: { action: :update }, local: true do |f| %>

      <div class="field">
        <%= f.label '詳細概要' %><br /><br />
        <%= f.text_field :title, placeholder: '詳細概要を入力してください', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label '詳細内容' %><br /><br />
        <%= f.text_area :text, placeholder: '詳細内容を入力してください' %>
      </div>

      <div class="field">
        <%= f.label '項目' %><br /><br />
        <%= f.select :item_id, @items.map{ |i| [i.title, i.id] } %>
      </div>

      <div class="actions">
        <%= f.submit "詳細編集", class: 'submit_btn' %>
      </div>
    <% end %>

    <div class='back_btn'>
      <%= link_to plan_item_detail_path(@detail.item.plan.id, @detail.item.id, @detail.id) do %>
        <i class="fa fa-hand-o-left" aria-hidden="true"></i>戻る
      <% end %>
    </div>

  </div>
</div>