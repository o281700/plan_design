<%= render 'layouts/header' %>

<div class='post_wrapper_plan'>
  <div class='post_title'>
    <h1>アイテム新規作成</h1>
  </div>
  <div class='post_container'>
    <%= form_with model: @item, url: { action: :create }, local: true do |f| %>

      <div class="field">
        <%= f.label :title %><br /><br />
        <%= f.text_field :title, placeholder: 'プランを入力してください', autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "プラン作成", class: 'submit_btn' %>
      </div>
    <% end %>
  </div>
</div>