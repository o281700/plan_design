<%= render 'layouts/header' %>

<div class='post_wrapper_plan'>
  <div class='post_title'>
    <h1>アイテム新規作成</h1>
  </div>
  <div class='post_container'>
    <%= form_with model: @item, url: { action: :create }, local: true do |f| %>

      <div class="field">
        <%= f.label :title %><br /><br />
        <%= f.text_field :title, placeholder: 'アイテムを入力してください', autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "アイテム作成", class: 'submit_btn' %>
      </div>

      <div class='back_btn'>
        <%= link_to :back do %>
          <i class="fa fa-hand-o-left" aria-hidden="true"></i>戻る
        <% end %>
      </div>
    <% end %>
  </div>
</div>